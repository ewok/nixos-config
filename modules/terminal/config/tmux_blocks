DATE=$(date +"ðŸ“† %d/%m")
UTC=$(date -u +"ðŸŒ %R")
MSK=$(TZ='Europe/Moscow' date +"ðŸ‡·ðŸ‡º %R")
KG=$(TZ='Asia/Bishkek' date +"ðŸ‡°ðŸ‡¬ %R")
PHT=$(TZ='Asia/Manila' date +"ðŸ‡µðŸ‡­ %R")

mac_vpn_status() {
    UTUN=$(ifconfig | grep -E 'utun[0-9]+:' | grep -v utun0 | cut -f1 -d':')
    IPSEC=$(ifconfig | grep -E 'ipsec[0-9]+:' | cut -f1 -d':')

    if [[ $UTUN != "" ]]; then
        for utun in $UTUN; do
            IP=$(ifconfig $utun 2>/dev/null | grep -w inet | cut -d' ' -f2)
            if [[ "$IP" != "" ]]; then
                echo -en "ï€£"
                return
            fi
        done
    fi

    if [[ $IPSEC != "" ]]; then
        for ipsec in $IPSEC; do
            IP=$(ifconfig $utun 2>/dev/null | grep -w inet | cut -d' ' -f2)
            if [[ "$IP" != "" ]]; then
                echo -en "ï€£"
                return
            fi
        done
    fi

    echo -en "ï‚œ"
}

# mac_show_battery() {
