      - {  name: "core.excludesfile", value: "~/.gitexcludes" }
      - {  name: "credential.helper", value: "/usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring" }

- shell: cd /usr/share/git/credential/gnome-keyring && make
  changed_when: False
  ignore_errors: True
