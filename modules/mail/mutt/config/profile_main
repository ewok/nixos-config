set imap_user = `cat ~/.mutt_main`
set imap_pass = `pass "$(cat ~/.mutt_main)"`
set smtp_pass = `pass "$(cat ~/.mutt_main)"`
set smtp_url = "smtp://`cat ~/.mutt_main`@smtp.gmail.com:587/"
set from = `cat ~/.mutt_main`
my_hdr Bcc: `cat ~/.mutt_main`
set realname = "Artur Taranchiev"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record = /dev/null
set postponed = "+[Gmail]/Drafts"
set header_cache = ~/tmp/mutt/main/cache/headers
set message_cachedir = ~/tmp/mutt/main/cache/bodies
set certificate_file = ~/tmp/mutt/main/certificates
set ssl_starttls = yes
set ssl_force_tls = yes
set smtp_authenticators = 'gssapi:login'

set mbox="imaps://imap.gmail.com/[Gmail]/All Mail"
set trash="imaps://imap.gmail.com/[Gmail]/Trash"

# Try and prevent imap timeouts
set imap_keepalive = 300

# Use gmail IMAP IDLE support.
set imap_idle
set imap_check_subscribed
unset imap_passive
unset imap_peek

macro index,pager A "<save-message>=[Gmail]/All Mail<enter><enter><sync-mailbox>y" "Archive"
macro index,pager D "<save-message>=[Gmail]/Trash<enter><enter>" "Trash"
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index,pager ma "<save-message>=[Gmail]/All Mail<enter><enter><sync-mailbox>y" "Move to Archive"
macro index,pager mi "<save-message>=INBOX<enter><enter><sync-mailbox>y" "Move to Inbox"
macro index,pager,attach rm "<enter-command>set signature=~/.signature_main_md<enter><enter-command>set mailcap_path=~/.mutt/mailcap_reply<enter><reply>"
macro index,pager,attach rp "<enter-command>set signature=~/.signature_main_plain<enter><enter-command>set mailcap_path=~/.mutt/mailcap<enter><reply>"
macro index,pager,attach RM "<enter-command>set signature=~/.signature_main_md<enter><enter-command>set mailcap_path=~/.mutt/mailcap_reply<enter><group-reply>"
macro index,pager,attach RP "<enter-command>set signature=~/.signature_main_plain<enter><enter-command>set mailcap_path=~/.mutt/mailcap<enter><group-reply>"
macro index,pager,attach LM "<enter-command>set signature=~/.signature_main_md<enter><enter-command>set mailcap_path=~/.mutt/mailcap_reply<enter><list-reply>"
macro index,pager,attach LP "<enter-command>set signature=~/.signature_main_plain<enter><enter-command>set mailcap_path=~/.mutt/mailcap<enter><list-reply>"

bind index F imap-fetch-mail

# Address book
set query_command="goobook -c ~/.goobook_main query %s"
macro index,pager a "<pipe-message>goobook -c ~/.goobook_main add<return>" "add sender to google contacts"
bind editor <Tab> complete-query

set signature=~/.signature_main
